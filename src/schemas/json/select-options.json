{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:labimotion:schemas:select-options",
  "title": "Select Options Configuration Schema",
  "description": "Schema for dynamic select options configuration with key-label pairs.",
  "type": "object",
  "patternProperties": {
    "^.*$": {
      "type": "object",
      "properties": {
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string"
              },
              "label": {
                "type": "string"
              }
            },
            "required": [
              "key",
              "label"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}